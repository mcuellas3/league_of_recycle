<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundscan"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/textoFaq"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Bienvenido a la sección de preguntas frecuentes de Zabbal, la aplicación destinada al reciclaje en centros educativos."
        android:textColor="@color/black"
        android:textSize="65px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textoFaq2"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Aquí encontrarás respuestas a las preguntas más comunes sobre nuestra aplicación."
        android:textColor="@color/black"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFaq" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="421dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFaq2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape"
                android:onClick="expand"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="¿Qué es Zabbal?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/respuesta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Zabbal es una aplicación que busca fomentar el reciclaje en centros educativos. Nuestra plataforma ofrece una manera sencilla y eficiente de reciclar y gestionar los residuos en tu escuela o instituto."
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape"
                android:onClick="expand2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="¿De donde viene el nombre?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/respuesta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="El Zabbal es un trabajador incansable en la tarea de reciclaje, con su habilidad única para separar y clasificar los materiales, el Zabbal es fundamental en la lucha contra la contaminación y el exceso de basura en nuestro mundo. Gracias a su arduo trabajo, podemos darle una nueva vida a los materiales que de otra forma estarían destinados a ser desperdiciados.Pero su tarea va más allá de la simple separación de materiales. El Zabbal es un defensor de la sostenibilidad, un embajador de un mundo más verde. A través de su trabajo, nos muestra la importancia de reducir, reutilizar y reciclar en nuestras vidas diarias.Únete a nosotros en esta aventura para conocer más sobre el Zabbal, su tarea crucial y su impacto en el mundo. Descubre cómo cada pequeña acción puede tener un gran impacto y cómo juntos podemos continuar con el legado de los trabajadores de Zabbaleen, construyendo un futuro más sostenible para todos."
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape"
                android:onClick="expand3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="¿Qué tipos de residuos puedo reciclar con Zabbal?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/respuesta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Con Zabbal podrás reciclar una amplia variedad de residuos, incluyendo papel, cartón, plástico, vidrio, metal y residuos orgánicos."
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape"
                android:onClick="expand4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="¿Cómo puedo saber qué residuos van en cada contenedor?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/respuesta4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Zabbal te ofrece información detallada sobre qué residuos van en cada contenedor de reciclaje. Además, la aplicación también cuenta con un sistema de escaneo de códigos QR que te ayudará a identificar el contenedor correspondiente para cada tipo de residuo."
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape"
                android:onClick="expand5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="¿Puedo realizar un seguimiento de mis estadísticas de reciclaje?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/respuesta5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Sí, Zabbal te ofrece la posibilidad de realizar un seguimiento de tus estadísticas de reciclaje. Podrás ver cuántos residuos has reciclado, cuánto has contribuido al medio ambiente y cómo te comparas con otros usuarios de la aplicación."
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape"
                android:onClick="expand6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="¿Cómo puedo obtener puntos y recompensas en Zabbal?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/respuesta6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Reciclar con Zabbal te permitirá obtener puntos que podrás canjear por diferentes recompensas. Además, la aplicación también cuenta con un sistema de logros que te permitirá desbloquear nuevas funciones y beneficios."
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="1918dp"
        android:layout_height="50dp"
        android:background="@color/Primary"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/Primary"
            android:contentDescription="home"
            android:onClick="Home"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/casa" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/Primary"
            android:contentDescription="map"
            android:onClick="Map"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/map" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/Primary"
            android:contentDescription="scan"
            android:onClick="scan"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/recycle" />

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/Primary"
            android:contentDescription="ranking"
            android:onClick="Ranking"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/trophy" />

        <ImageButton
            android:id="@+id/imageButton15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/Primary"
            android:contentDescription="info"
            android:onClick="Info"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/informacion2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>