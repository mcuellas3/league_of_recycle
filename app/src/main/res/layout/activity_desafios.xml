                            android:orientation="vertical"
                            android:text="Smaug ha acumulado una montaÃ±a de envases. Ayudas a reciclar todos esos envases y vencerlo!!!"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_info2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="600 / 2000"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:max="2000"
                            android:progress="600" />

                        <TextView
                            android:id="@+id/tv_txtswt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:orientation="vertical"
                            android:text="Date de alta en el evento:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/switch2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Suscribete" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="4dp"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fotograf3"
                        android:layout_width="400dp"
                        android:layout_height="312dp"
                        android:layout_gravity="center"
                        android:background="@drawable/montana"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
