<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp"
        android:background="@drawable/fondobonito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape3"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/fotografnot1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/notbrus"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_txtnot1"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="Bruselas prepara impuestos a los productos nuevos para forzar a usar plásticos o textiles reciclados"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_infonot1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="10dp"
                        android:text="Pulsa aquí para leer la noticia completa"
                        android:textAlignment="center"
                        android:textColor="@color/Primary"
                        android:textSize="10dp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/cvn2"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                android:gravity="center"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/shape3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fotografnot2"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/notand"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_txtnot2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:text="Andorra tendrá un reciclaje urbano de residuos del 65% en el 2035"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_infonot2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"

                            android:text="Pulsa aquí para leer la noticia completa"
                            android:textAlignment="center"
                            android:textColor="@color/Primary"
                            android:textSize="10dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cvn3"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/shape3"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/fotografnot3"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/notalem"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_txtnot3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:text="El sistema alemán de devolución de botellas y latas: ¿mejor que los contenedores de reciclaje?"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_infonot3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Pulsa aquí para leer la noticia completa"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/Primary"
                            android:textSize="10dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>